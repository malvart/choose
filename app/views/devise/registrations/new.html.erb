<%= render partial: "cookings/header" %>

<div class='registration-new-content'>
  <div class='regi-frame'>
    <h1>新規登録</h1>

    <%= form_with model: @user, url: user_registration_path, local: true do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :nickname, "ユーザーネーム", class: 'form-header' %>
      <%= f.text_field :nickname, autofocus: true, class: 'regi-form' %>
    </div>

    <div class="field">
      <%= f.label :email, "メールアドレス", class: 'form-header' %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'regi-form' %>
    </div>

    <div class="field">
      <%= f.label :password, "パスワード", class: 'form-header' %>
      <%= f.password_field :password, autocomplete: "new-password", class: 'regi-form' %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, "パスワード確認", class: 'form-header' %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'regi-form' %>
    </div>

    <div class="actions">
      <%= f.submit "はじめる", class: 'regi-btn' %>
    </div>
    <% end %>
    <div class='render-links'>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>

<%= render partial: "cookings/footer" %>